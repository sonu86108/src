<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/dialog_background"
	android:layout_gravity="start">


	<EditText
		android:id="@+id/id_edt_word"
		android:layout_alignParentStart="true"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Word"
		android:textSize="25sp"/>
	<EditText
		android:layout_below="@id/id_edt_word"
		android:layout_alignParentLeft="true"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="Meaning..."
		android:id="@+id/id_edt_meaning"/>
	<EditText
		android:layout_below="@id/id_edt_meaning"
		android:layout_alignParentLeft="true"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="Description....."
		android:id="@+id/id_edt_desc"/>
	<Button
		android:id="@+id/id_btn_save"
		android:layout_below="@id/id_edt_desc"
		android:layout_alignParentRight="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="  Save  "/>


</RelativeLayout>
		
