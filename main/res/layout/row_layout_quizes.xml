<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
	android:layout_gravity="top"
	android:layout_marginBottom="5dp"
	android:id="@+id/id_cardView_quizRow">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_margin="13dp">

		<TextView 
			android:layout_alignParentStart="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:textSize="17sp"
			android:text="quizId"
			android:textStyle="bold"
			android:id="@+id/id_tv_quizId"/>
		<TextView 
			android:textSize="17sp"
			android:layout_marginLeft="50dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_toRightOf="@id/id_tv_quizId"
			android:text="QuizName"
			android:textStyle="bold"
			android:id="@+id/id_tv_quizName"/>

		<TextView 
			android:textSize="14sp"
			android:layout_alignParentBottom="true"
			android:layout_alignParentRight="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Date"
			android:id="@+id/id_tv_quizDate"/>
		<ImageView
			android:id="@+id/id_playQuiz"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:background="@color/light"
			android:visibility="gone"
			android:src="@drawable/ic_btn_play"/>



	</RelativeLayout>




</androidx.cardview.widget.CardView>
